#shopify-section-header{
	top: 0;
	left: 0;
	width: 100%;
	z-index: 6;
	background-color: $white;
	border-bottom: 1px solid rgba(0,0,0,.1);
	transition-duration: .25s;
	transform: translateY(0%);
	will-change: transform;
	&.hide-nav{
		transform: translateY(-100%);
	}
}
header{
	display: flex;
	padding-left: 1.5rem;
	a.logo{
		padding: .5rem 0;
		display: inline-block;
		font-size: 1.25rem;
		.svg-icon{
			display: block;
			width: 5em;
			height: 2.5em;
		}
	}
	@media only screen and (max-width:959px){
		nav{
			display: none;
		}
		ul.utils{
			margin-left: auto;
			display: flex;
			li{
				border-left: 1px solid rgba(0,0,0,.1);
				button,a{
					display: flex;
					padding: 0;
					justify-content: center;
					align-items: center;
					height: 100%;
					padding: 0 1.25rem;
				}
			}
		}
	}
	@media only screen and (min-width:960px){
		padding: 0 1.5rem;
		@media only screen and (min-width:1200px){
			padding: 0 3rem;
		}
		a.logo{
			margin-right: 3rem;
		}
		nav{
			ul{
				display: flex;
				align-items: center;
				li{
					a{
						display: block;
						padding: 1.25rem 1.25rem;
						font-size: .9em;
						&:hover{
							text-decoration: none;
						}
					}
				}
			}
		}
		ul.utils{
			margin-left: auto;
			display: flex;
			align-items: center;
			li{
				margin-left: 1.5rem;
				a{
					display: block;
					font-size: .9em;
				}
				.svg-icon{
					display: block;
					width: 1.1rem;
					height: 1.1rem;
				}
			}
		}
	}
}

footer{
	overflow: hidden;
	padding: 1.5rem;
	background-color: #28793e;
	color: white;
	*{
		color: inherit;
	}
	a.logo{
		padding: 0rem 0;
		display: inline-block;
		font-size: 1.5rem;
		.svg-icon{
			display: block;
			width: 5em;
			height: 2.5em;
		}
	}
	.footer__top{
		display: flex;
		flex-direction: column;
		.footer-col{
			order: 2;
			padding: 1.5rem 0;
			border-bottom: 1px solid rgba(255,255,255,.25);
			&.footer-col--first{
				border-bottom: 0;
				order: 3;
				display: flex;
				justify-content: space-between;
				align-items: center;
			}
			&.footer-col--nav{
				ul{
					li{
						margin-bottom: 1.5rem;
						a{
							font-weight: 900;
							font-size: 1.5em;
						}
						&.page-faqs,
						&.page-shipping-information,
						&.page-wholesale-request{
							a{
								font-weight: normal;
							}
						}
					}
				}
			}
			&.footer-col--newsletter{
				h2{
					text-transform: uppercase;
					font-size: 2em;
				}
				form{
					position: relative;
					label{
						width: 0;
						height: 0;
						display: block;
						overflow: hidden;
					}
					input{
						border-radius: 0;
						background-color: transparent;
						border: 1px solid $white;
						color: $white;
						padding: .75em 1.25em;
						font-size: .9em;
						&::placeholder{
							color: $white;
							opacity: 1;
						}
					}
					button[type="submit"]{
						background-color: transparent;
						display: block;
						width: auto;
						padding: 0;
						border: 0;
						position: absolute;
						bottom: .5rem;
						right: -3em;
						@media only screen and (min-width:960px){
							right: -4em;
						}
						.svg-icon{
							transform: rotate(180deg);
							width: 6em;
							height: 2em;
						}
					}
				}
			}

		}
	}
	.footer__bottom{
		padding-bottom: 1.5rem;
		p.copy{
			font-size: .75em;
			margin-bottom: 0;
		}
		ul{
			font-size: .75em;
			display: flex;
			justify-content: space-between;
			margin-top: 1rem;
		}
	}
	@media only screen and (min-width:960px){
		
		.footer__top{
			flex-direction: row;
			.footer-col{
				padding: 0 1.5rem;
				border-bottom: 0;
				border-right: 1px solid rgba(255,255,255,.25);
				width: 45%;
				&:last-of-type{
					border: 0;
					width: 35%;
				}
				&.footer-col--first{
					width: 20%;
					order: 1;
					padding-left: 0;
					display: block;
					display: flex;
					flex-direction: column;
					align-items: flex-start;
					max-width: 250px;
					a.logo{
						margin-bottom: 1.5rem;
						font-size: 2rem;
					}
					ul{
						margin-top: auto;
					}
				}
				&.footer-col--nav{
					ul{
						margin: 0 auto;
						max-width: 490px;
						column-count: 2;
						column-width: 100px;
						li{
							display: inline-block;
							width: 100%;
							margin-bottom: .75rem;
							a{
								font-size: 1.25rem;
							}
						}
					}
				}
				&.footer-col--newsletter{
					.content-wrap{
						max-width: 320px;
						margin: 0 auto;
					}
					h2{
						font-size: 3.5em;
					}
				}
			}
		}
		
		.footer__bottom{
			margin-top: 4.5rem;
			display: flex;
			justify-content: space-between;
			ul{
				margin-top: 0;
				justify-content: flex-start;
				li{
					margin-left: 1.5rem;
				}
			}
		}
		
	}
}

.h-hero{
	background-color: white!important;
	padding: 0!important;
	position: relative;
	&:after{
		content: '';
		display: block;
	}
	.floaters{
		width: 100%;
		overflow: hidden;
		position: absolute;
		top: 0;
		left: 0;
		height: 100%;
		z-index: 2;
		pointer-events: none;
	}
	.floater{
		position: absolute;
		img{
			width: 100%;
			height: auto;
		}
		&.floater--1{
			width: 10vw;
			top: 65vw;
			left: 11vw;
		}
		&.floater--2{
			width: 21vw;
			top: 37vw;
			right: 2vw;
		}
		@media only screen and (min-width:960px){
			&.floater--1{
				width: 7vw;
				top: 44vw;
				left: 11vw;
			}
			&.floater--2{
				width: 15vw;
				top: 17vw;
				right: 18vw;
			}
		}
	}
	.padding-wrap{
		padding-top: 15vw;
		top: 1.5rem;
		z-index: 3;
		font-size: 11vw;
		h1{
			font-size: 1em;
			text-align: center;
			transition-duration: .25s;
			span.break{
				display: block;
				font-weight: normal;
				font-size: .5em;
				letter-spacing: .15em;
			}
			.icon-font{
				position: relative;
				top: -.1em;
				color: $green;
			}
		}
		@media only screen and (min-width:960px){
			padding-top: 5vw;
			font-size: 6.25vw;
			position: sticky;
		}
	}

	&.white-heading{
		h1{
			color: $white;
			.icon-font{
				color: $white;
			}
		}
	}
	
	.h-hero__cards{
		display: flex;
		justify-content: space-between;
		padding-top: 15vw;
		padding-bottom: 45vw;
		@media only screen and (min-width:960px){
			padding-top: 10vw;
			padding-bottom: 35vw;
		}
	}
	
	.h-hero__card{
		width: calc(33.33% - .75rem);
		will-change: transform;
		transition: transform .125s ease;
		background-size: cover;
		background-position: 50% 50%;
		@media only screen and (min-width:960px){
			width: calc(33.33% - 1.5rem);
		}
		.spacer{
			width: 100%;
			padding-bottom: 100%;
			position: relative;
		}
		&:nth-of-type(2){
			z-index: 2;
			transform: none!important;
			.spacer{
			}
		}
		&:nth-of-type(1){
			z-index: 1;
			transform-origin: top right;
			transform: translateX(25%) translateY(-15%) rotate(-25deg);
		}
		&:nth-of-type(3){
			z-index: 1;
			transform-origin: top left;
			transform: translateX(-25%) translateY(-15%) rotate(25deg);
		}
	}

}



