		height: 15vw;
		display: block;
		.positioner{
			display: block;
		}
		svg{
			display: block;
		}
	}
	.floater{
		color: transparent;
		pointer-events: none;
		position: absolute;
		z-index: 2;
		img{
			width: 100%;
			height: auto;
		}
		&.floater--1{
			width: 10vw;
			bottom: 55vw;
			left: 11vw;
		}
		&.floater--2{
			width: 12vw;
			bottom: 67vw;
			right: 10vw;
		}
		@media only screen and (min-width:960px){
			&.floater--1{
				width: 7vw;
				bottom: 24vw;
				left: 26vw;
			}
			&.floater--2{
				width: 10vw;
				bottom: 30vw;
				right: 24vw;
			}
		}
	}
	.col-slide{
		position: relative;
		width: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		overflow: hidden;
//		padding: 75vw 1.5rem 25vw;
//		padding: 45vw 1.5rem 25vw;
		padding: 35vw 1.5rem 25vw;
		@media only screen and (min-width:960px){
			padding: 56vw 3rem 10vw;
		}
		.col-slide__image{
			max-width: 400px;
			position: relative;
			z-index: 2;
			width: 50%;
			@media only screen and (min-width:960px){
				width: 50%!important;
			}
			img{
				position: relative;
				z-index: 2;
			}
			.col-slide__image__background{
				width: 130%;
				height: 75%;
				top: 0;
				bottom: 0;
				left: -15%;
				right: -15%;
				position: absolute;
				margin: auto;
				background-color: #1e1e1e;
				z-index: 1;
				transform: rotate(8deg);
			}
		}
		&[data-text="Pickle Snacks"]{
			.col-slide__image{
				width: 65%;
				max-width: 525px;
				.col-slide__image__background{
					width: 100%;
					left: -20%;
				}
			}
		}
		&[data-text="Pickle Juice"]{
			.col-slide__image{
				max-width: 200px;
				width: 25%;
				.col-slide__image__background{
					width: 200%;
					left: -50%;
					right: -50%;
					height: 60%;
				}
			}
		}
	}
	.feat-collections__marquees{
		z-index: 1;
		pointer-events: none;
		display: flex;
		align-items: center;
		z-index: 1;
		position: absolute;
		bottom: 0;
		left: 0;
		width: 100%;
		height: calc(100% - 0vw);
//		height: calc(100% - 30vw);
		@media only screen and (min-width:960px){
			height: calc(100% - 25vw);
		}
		.marquee{
			width: 100%;
			margin-top: 25vw;
			@media only screen and (min-width:960px){
				margin-top: 22vw;
			}
			span{
				width: 40%;
				text-align: center;
				display: block;
				font-size: 4.25vw;
				font-weight: 900;
				font-family: $display;
				color: white;
				text-transform: uppercase;
				&:nth-child(odd){
					font-family: $body;
					-webkit-text-stroke-width: .025em;
					text-stroke-width: .1em;
					-webkit-text-stroke-color: white;
					text-stroke-color: white;
					color: transparent;
				}
			}
		}
	}
	.flickity-slider{
		display: flex;
		z-index: 2;
		.col-slide{
			min-height: 100%;
		}
	}
	.collection-slider{
		overflow: hidden;
	}
	.collection-slider__nav{
		position: absolute;
		bottom: 7.25vw;
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: space-between;
		z-index: 2;
		padding: 0 1.5rem;
		li{
			list-style: none;
			margin: 0;
			button{
				position: relative;
				font-size: 4vw;
				appearance:none;
				-webkit-appearance:none;
				&:focus {
					outline: 0;
				}
				&:after,
				&:before{
					position: absolute;
					width: 3em;
					height: 3em;
					border-radius: 50%;
					background-color: $orange;
					top: -.9em;
					transition-duration: .25s;
					opacity: 0;
				}
				&.prev{
					&:before{
						left: -1em;
						content: '';
					}
				}
				&.next{
					&:before{
						right: -1em;
						content: '';
					}
				}
				&:hover{
					&:after,
					&:before{
						opacity: 1;
					}
				}
				.svg-icon{
					height: 1.25em;
					width: 6em;
					transform: rotate(0deg);
				}
				&.next{
					.svg-icon{
						transform: rotate(180deg);
					}
				}
			}
		}
		@media only screen and (min-width:960px){
			width: 80%;
			left: 0;
			right: 0;
			margin: auto;
			bottom: 4.25vw;
			li{
				button{
					font-size: 1vw;
				}
			}
		}
	}
	.collection-slider__count{
		pointer-events: none;
		text-align: center;
		font-size: 5vw;
		position: absolute;
		bottom: 8vw;
		left: 0%;
		width: 100%;
		color: $white;
		font-family: $heading;
		@media only screen and (min-width:960px){
			font-size: 2vw;
			bottom: 4vw;
		}
	}
}




