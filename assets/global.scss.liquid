$heading_color: $black;

//----------------------------------------------
//* Forms
//---------------------------------------------
$input_border_width: 2px;
$input_inactive: #f0efef;
$input_active: $info;
$input_filled: $info;
$input_error: $error;

//----------------------------------------------
//* TYPOGRAPHY
//---------------------------------------------
// Fonts
$serif: $body;
$sans: $body;

$heading: $heading;

$line-height: 1.75;

$thin: 300;
$normal: 400;
$semibold: 500;
$bold: 600;
$thick: 900;

// Headings
$heading_weight: $bold;
$heading_font: $heading;

$heading_h1: 5.5em;
$heading_h2: 3.5em;
$heading_h3: 1.6em;
$heading_h4: 1.4em;
$heading_h5: 1.2em;
$heading_h6: 1.1em;
$heading_h7: 1em;

$heading_h1__mobile: 2.75em;
$heading_h2__mobile: 1.6em;
$heading_h3__mobile: 1.4em;
$heading_h4__mobile: 1.2m;
$heading_h5__mobile: 1.1em;
$heading_h6__mobile: 1em;
$heading_h7__mobile: 1em;

//----------------------------------------------
//* LAYOUTS
//---------------------------------------------


html {
    overflow-y: initial;
}

body {
    color: #3C3C3C;
    font-family: $body;
    line-height: $line-height;
    &.body--overlay{
        &:before {
            opacity: .9;
        }
    }
}


.desk-only,
.hide-mobile {
    @media (max-width: 959px) {
        display: none !important;
    }
}

.mob-only,
.show-mobile {
    @media (min-width: 960px) {
        display: none !important;
    }
}

.hide, .hidden {
    display: none !important;
}

header, footer {
    ol, ul, li {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    a {
        color: inherit;
    }
}

hr {
    border: 1px solid $smoke;
    margin: 1.5em 0;
}

h1, .h1,
h2, .h2,
h3, .h3,
h4, .h4,
h5, .h5,
h6, .h6,
.h7{
    color: $heading_color;
    font-family: $heading;
	font-weight: normal;
    line-height: 1.2;
    margin: 0;
    margin-bottom: 1.5rem;
	letter-spacing: .025em;
    &:last-child {
        margin-bottom: 0;
    }
	&.hdisplay{
		font-family: $display;
	}
}

*:not(.preheading) + h1, *:not(.preheading) + .h1,
*:not(.preheading) + h2, *:not(.preheading) + .h2,
*:not(.preheading) + h3, *:not(.preheading) + .h3,
*:not(.preheading) + h4, *:not(.preheading) + .h4,
*:not(.preheading) + h5, *:not(.preheading) + .h5,
*:not(.preheading) + h6, *:not(.preheading) + .h6,
*:not(.preheading) + .h7{
    margin-top: 1.5rem;
}
    
h1, .h1{
    font-size: $heading_h1__mobile;
	font-weight: bold;
    @media (min-width: 960px) {
        font-size: $heading_h1;
    }

}


h2, .h2{
    font-size: $heading_h2__mobile;
    @media (min-width: 960px) {
        font-size: $heading_h2;
    }
}

h3, .h3{
    font-size: $heading_h3__mobile;
    @media (min-width: 960px) {
        font-size: $heading_h3;
    }
}

h4, .h4{
    font-size: $heading_h4__mobile;
    @media (min-width: 960px) {
        font-size: $heading_h4;
    }
}

h5, .h5{
    font-size: $heading_h5__mobile;
    @media (min-width: 960px) {
        font-size: $heading_h5;
    }
}

h6, .h6{
    font-size: $heading_h6__mobile;
    @media (min-width: 960px) {
        font-size: $heading_h6;
    }
}

.subtext,
.preheading,
.subheading {
    font-size: 1.25em;
    text-transform: uppercase;
    display: inline-block;
    margin-bottom: 1em;
    letter-spacing: .1em;
	font-family: $heading;
	text-transform: uppercase;
	color: $green;
	&.preheading--body{
		font-family: $body;
		color: $black;
		font-size: 1em;
		position: relative;
		padding-left: 2.75em;
		&:before{
			content: '';
			width: 1em;
			height: 1em;
			background-color: $black;
			border-radius: 50% 50%;
			position: absolute;
			left: 0;
			top: 0;
			bottom: 0;
			margin: auto;
		}
	}
}

.icon-font{
	font-family: $icons;
	font-weight: normal;
}

.content-block,
.post-content{
    h1, .h1{
        font-size: $heading_h2__mobile;
    }
    h2, .h2{
        font-size: $heading_h3__mobile;
    }
    h3, .h3{
        font-size: $heading_h4__mobile;
    }
    h4, .h4{
        font-size: $heading_h5__mobile;
    }
    h5, .h5{
