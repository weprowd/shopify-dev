button{
	background-color: transparent;
	border: none;
	cursor: pointer;
	font-size: 1em;
}

a.link-arrow,
a.arrow-link{
	color: $blue;
	&:hover{
		text-decoration:none;
		color: $blue;
	}
	&:after{
		content: '';
		position: relative;
		top: .15em;
		width: 1em;
		height: 1em;
		display: inline-block;
		margin-left: .5em;
		background-size: 3em 3em;
		background-position: 50% 50%;
		background-image: url("{{ 'chevron.svg' | asset_url }}");
	}
}

.svg-icon{
	display: block;
	width: 1em;
	height: 1em;
	position: relative;
	.positioner{
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		svg{
			display: block;
			width: 100%;
			height: 100%;
		}
	}
}

.positioner{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	img{
		object-fit: cover;
		width: 100%;
		height: 100%;
		max-width: none;
	}
}

.image-reveal{
	&:after{
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		content: '';
		transition-duration: .75s;
		transition-delay: .1s;
		background-color: #2e642c;
		z-index: 2;
		-webkit-transition-property: cubic-bezier(0.5, 0, 0, 1);
		-o-transition-property: cubic-bezier(0.5, 0, 0, 1);
		transition-property: cubic-bezier(0.5, 0, 0, 1);
	}
	&.aos-animate{
		&:after{
			height: 0%;
		}
	}
}

ul.social-share{
	display: flex;
	li{
		margin-right: 1rem;
		a{
			display: block;
			border: 1px solid white;
			border-radius: 50%;
			padding: .5rem;
			.svg-icon{
				display: block;
				svg{
					display: block;
					path{
						fill:$white;
					}
				}
			}
		}
	}
}

@-webkit-keyframes rotating /* Safari and Chrome */ {
  from {
    -webkit-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  to {
    -webkit-transform: rotate(360deg);
    -o-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}
@keyframes rotating {
  from {
    -ms-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  to {
    -ms-transform: rotate(360deg);
    -moz-transform: rotate(360deg);
    -webkit-transform: rotate(360deg);
    -o-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}

.badge{
	&.badge--spin{
		animation: rotating 12s linear infinite;
