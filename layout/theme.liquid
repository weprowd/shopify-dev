<!doctype html>
<html class="no-js" lang="{{ shop.locale }}">
<head>
  	<title>{{ shop.name }} - {{ page_title }}</title>
  	
 	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<link rel="canonical" href="{{ canonical_url }}">
     
  	{{ 'reset.scss.css' | asset_url | stylesheet_tag }}
  	{{ 'vendors.scss.css' | asset_url | stylesheet_tag }}
  	{{ 'global.scss.css' | asset_url | stylesheet_tag }}
	{{ 'theme.scss.css'  | asset_url | stylesheet_tag }}
	
    {{ content_for_header }}
    
    {% include 'schema' %}
	
</head>

<body>

	{% section 'header' %}

	<main>
	  {{ content_for_layout }}
	</main>

	{% section 'footer' %}

</body>

<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>

<script src="{{ 'vendors.js' | asset_url }}"></script>

{% if template == 'index' %}
	<script src="{{ 'jquery.easing.1.3.js' | asset_url }}"></script>
	<script src="{{ 'jquery.parallax-scroll.js' | asset_url }}"></script>
{% endif %}

{% comment %}
    //only uncomment if required
    {{ 'api.jquery.js' | shopify_asset_url | script_tag }}
{% endcomment %}

{%- if template.directory == 'customers' -%}
    <script src="{{ 'shopify_common.js' | shopify_asset_url }}"></script>
    <script src="{{ 'customer_area.js'  | shopify_asset_url }}"></script>
	{{ 'customer.js' | asset_url | script_tag  }}
{%- endif -%}

<script src="{{ 'theme.js' | asset_url }}"></script>


</html>